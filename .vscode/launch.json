	"version": "0.2.0",
	"configurations": [
		{
			"name": "Generate Bindings",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build binding generator",
			"program": "${workspaceFolder}/BindingGenerator/bin/Debug/net7.0/BindingGenerator.dll",
			"args": [],
			"cwd": "${workspaceFolder}",
			"stopAtEntry": false,
			"console": "internalConsole",
			"logging": {
				"moduleLoad": false,
			}
		},
		{
			"name": "Dodge the Creeps",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceFolder}/../godot/bin/godot.windows.editor.x86_64.exe",
			"args": [
				"-e",
				"${workspaceFolder}/DodgeTheCreeps/project.godot",
				//"--quit",
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/DodgeTheCreeps",
			"console": "integratedTerminal",
			"preLaunchTask": "build Dodge the Creeps",
		},
		{
			"name": "Dodge the Creeps Ingame",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceFolder}/../godot/bin/godot.windows.editor.x86_64.exe",
			"args": [
				//"${workspaceFolder}/DodgeTheCreeps/project.godot",
				//"--quit",
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/DodgeTheCreeps",
			"console": "integratedTerminal",
			"preLaunchTask": "build Dodge the Creeps",
		},
	]
}
