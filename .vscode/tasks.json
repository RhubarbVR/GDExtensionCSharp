{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build Dodge the Creeps",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"${workspaceFolder}/Examples/DodgeTheCreeps/Source/Source.csproj",
				"-property:GenerateFullPaths=true",
				"-consoleloggerparameters:NoSummary",
				"-p:NativeLib=Shared",
				"-r=win-x64"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "build binding generator",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/BindingGenerator/BindingGenerator.csproj"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "build Summator",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"${workspaceFolder}/Examples/Summator/Source/Source.csproj",
				"-property:GenerateFullPaths=true",
				"-consoleloggerparameters:NoSummary",
				"-p:NativeLib=Shared",
				"-r=win-x64"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Generate Api",
			"type": "process",
			"command": "${workspaceFolder}/../godot/bin/godot.windows.editor.x86_64.exe",
			"args": [
				"--dump-extension-api",
				"extension_api.json"
			],
			"problemMatcher": []
		}
	]
}
